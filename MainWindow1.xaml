<Window x:Class="GoGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Игра Го" 
        Height="700" 
        Width="800"
        MinHeight="600"
        MinWidth="700"
        WindowStartupLocation="CenterScreen"
        Background="#FFE8D5B9">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF4A3728"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FF4A3728"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Игровая доска -->
        <Border Grid.Column="0" 
                Margin="20"
                Background="#FFD9B382"
                CornerRadius="5"
                BorderThickness="2"
                BorderBrush="#FF4A3728">
            <Canvas x:Name="BoardCanvas" 
                    MouseDown="BoardCanvas_MouseDown"
                    Background="Transparent"/>
        </Border>

        <!-- Панель управления -->
        <Border Grid.Column="1" 
                Width="200"
                Background="#FFE8D5B9"
                BorderThickness="1 0 0 0"
                BorderBrush="#FF4A3728">
            <StackPanel Margin="10">
                <Label Content="Игра Го" 
                       FontSize="24"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

                <Label x:Name="StatusLabel" 
                       Content="Чёрные ходят"
                       HorizontalAlignment="Center" Width="163"/>

                <Label Content="Счёт:" 
                       Margin="0 20 0 5" Width="157"/>
                <Label x:Name="BlackScoreLabel" 
                       Content="Чёрные: 0"
                       Margin="10 0 0 0" RenderTransformOrigin="0.316,0.697" Width="133"/>
                <Label x:Name="WhiteScoreLabel" 
                       Content="Белые: 0"
                       Margin="10 0 0 10"/>

                <Button x:Name="PassButton" 
                        Content="Пас"
                        Click="PassButton_Click"/>

                <Button x:Name="ResignButton" 
                        Content="Сдаться"
                        Click="ResignButton_Click"/>

                <Button x:Name="NewGameButton" 
                        Content="Новая игра"
                        Margin="0 20 0 0"
                        Click="NewGameButton_Click"/>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Размер:"/>
                    <ComboBox x:Name="BoardSizeComboBox" 
                              SelectedIndex="0"
                              Margin="5 0 0 0">
                        <ComboBoxItem Content="9x9"/>
                        <ComboBoxItem Content="13x13"/>
                        <ComboBoxItem Content="19x19"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
